<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Tab text="Calendar" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.scheduler.controllers.CalendarTabController">
  <content>
    <AnchorPane fx:id="calendarTab" minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="800.0">
         <children>
            <ListView fx:id="monthList" prefHeight="600.0" prefWidth="800.0">
               <padding>
                  <Insets top="80.0" />
               </padding>
            </ListView>
            <Button fx:id="addAppointmentButton" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#createAppointment" text="Add appointment" />
            <Button fx:id="weekButton" layoutX="50.0" layoutY="50.0" mnemonicParsing="false" onAction="#displayWeeklyAppointments" text="Week" />
            <Button fx:id="MonthButton" layoutX="100.0" layoutY="50.0" mnemonicParsing="false" onAction="#displayMonthlyAppointments" text="Month" />
         </children></AnchorPane>
  </content>
</Tab>
